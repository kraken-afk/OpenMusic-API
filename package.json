{
  "name": "openmusic-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "lint": "rome check --apply-unsafe ./src",
    "format": "rome format --write ./src/*",
    "test": "set \"NODE_OPTIONS=--experimental-vm-modules\" && jest",
    "dev": "nodemon",
    "start": "node dist/server.js",
    "build": "ts-node src/scripts/build.ts",
    "build-start": "ts-node src/scripts/build.ts && echo Starting the Server &&  node dist/server.js",
    "reset-dev": "ts-node src/scripts/drop-db.ts && ts-node src/scripts/build.ts && nodemon",
    "drop-db": "ts-node src/scripts/drop-db.ts",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo"
  },
  "keywords": [],
  "author": "",
