    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.10.2",
    "@types/sequelize": "^4.28.15",
    "@types/shortid": "^0.0.29",
    "jest": "^29.5.0",
    "rome": "12.1.3",
    "sequelize-cli": "^6.6.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
