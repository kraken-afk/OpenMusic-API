{
  "compilerOptions": {
    "target":"ES6",
    "module": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/server.ts"
  ]
}
