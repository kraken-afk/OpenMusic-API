{
  "compilerOptions": {
    "target":"ES6",
    "module": "NodeNext",
    "outDir": "./dist",
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}